extends ../layouts/common

block content
	h1 List Product
	.d-flex.align-item
		include pagination.pug
		
		form.ml-auto(action='/products/search', method="GET", class="form-inline my-2 my-lg-0")
			input(name="q", type="text", id="search-item", class="form-control mr-sm-2")
			button(class="btn btn-outline-success my-2 my-sm-0") Search		
	.row.mt-3
		each product in products
			.col-sm-3.mb-2
				.card
					img.card-img-top(src= product.image, alt='Card image')
					.card-body
						h5.card-title= product.name
						p.card-text= product.description
						.clearfix
							a.btn.btn-primary.float-right(href='/cart/add/'+ product.id) Add To Cart
							h3.card-text.float-left= product.price
								span $
	script
		include ../users/search.js

	
