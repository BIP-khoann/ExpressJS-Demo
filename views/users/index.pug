extends ../layouts/common

block content
	h1 List User
	.d-flex.align-item
		a.btn.btn-primary(href="/users/create") New
		form.ml-auto(action='/users/search', method="GET", class="form-inline my-2 my-lg-0")
			input(name="q", type="text", id="search-item", class="form-control mr-sm-2")
			button(class="btn btn-outline-success my-2 my-sm-0") Search
	table.table.mt-2
		thead.thead-dark
			tr
				th(scope='col') Avatar
				th(scope='col') Name
				th(scope='col') Phone
				th(scope='col') Action
		tbody
			each user in users
				tr
					td
						img(src=user.avatar, width="32")
					td= user.name
					td= user.phone
					td
						a.btn.btn-info.mr-2(href='/users/' + user.id) View
						//- form.ml-auto(action='/users/' + user.id, method="POST")
						a.btn.btn-danger.mr-2(href='/users/delete/' + user.id) Delete
						button.btn.btn-success.mr-2(type='button') Update
	script
		include search.js